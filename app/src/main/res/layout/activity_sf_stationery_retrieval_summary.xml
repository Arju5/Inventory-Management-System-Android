<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.stationery.SF_StationeryRetrievalSummaryActivity"
    android:layout_marginTop="60dp">

    <Button
        android:id="@+id/opensr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg1"
        android:text="Open SR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/pendingsr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/opensr"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg1"
        android:text="Pending SR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/completedsr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/pendingsr"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg1"
        android:text="Completed SR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/createsr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/completedsr"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg1"
        android:text="Create SR"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</androidx.constraintlayout.widget.ConstraintLayout>