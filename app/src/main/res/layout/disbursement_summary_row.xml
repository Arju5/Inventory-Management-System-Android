<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/dfsummary_DisbursementCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/dfsummary_StoreClerk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/dfsummary_Department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="Department - "
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/dfsummary_DepartmentRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/dfsummary_DeliveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/dfsummary_collectionPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>