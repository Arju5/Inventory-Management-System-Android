<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/dfsummary_DisbursementCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="Disbursement - "
                android:textColor="@color/colorBlack"
                android:textSize="15dp"/>

            <TableLayout
                android:id="@+id/empdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                app:layout_constraintBottom_toTopOf="@+id/label1">

                <TableRow>
                    <TextView
                        android:padding="5dip"
                        android:text="Store Clerk"/>
                    <TextView
                        android:id="@+id/dfsummary_StoreClerk"
                        android:text="Store Clerk Name"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:padding="5dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:padding="5dip"
                        android:text="Department"/>
                    <TextView
                        android:id="@+id/dfsummary_Department"
                        android:text="Department"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:padding="5dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/DF_DATE"
                        android:padding="5dip"
                        android:text="Expected Delivery Date"/>
                    <TextView
                        android:id="@+id/dfsummary_DeliveryDate"
                        android:text="Delivery Date"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:padding="5dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:padding="5dip"
                        android:text="Expected Delivery Date"/>
                    <TextView
                        android:id="@+id/dfsummary_collectionPoint"
                        android:text="Collection Point"
                        android:gravity="left"
                        android:textColor="@color/colorBlack"
                        android:padding="5dip" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>