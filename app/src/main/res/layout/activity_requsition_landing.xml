        <Button
            android:id="@+id/view_pending_req"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg2"
            android:text="@string/view_pending_requisitions"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/view_processed_req"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            app:layout_constraintTop_toBottomOf="@+id/view_pending_req"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/badgegreen"
            android:text="@string/view_processed_requisitions"
            android:textColor="#ffffff"
            android:textSize="24sp" />
