<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    tools:context=".activities.requisition.RequisitionLandingActivity">


        <Button
            android:id="@+id/view_pending_req"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/view_pending_requisitions"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_processed_req"/>

        <Button
            android:id="@+id/view_processed_req"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/view_processed_requisitions"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pending_req"/>
