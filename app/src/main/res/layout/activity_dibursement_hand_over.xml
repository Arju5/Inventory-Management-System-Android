<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dfhandoverTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disbursement Form Hand Over"
            android:textStyle="bold"
            android:gravity="center"/>
        <TableLayout
            android:id="@+id/disbursement_HandOverDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            app:layout_constraintTop_toBottomOf="@+id/dfhandoverTitle">

            <TableRow>
                <TextView
                    android:id="@+id/storeclerkfordelivery"
                    android:text="Store Clerk"
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/storeclerknamefordelivery"
                    android:text="Yamone"
                    android:gravity="left"
                    android:padding="5dip"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/df_depRep"
                    android:text="Department Rep "
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/df_depRepName"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/df_dfcode_holder"
                    android:text="Disbursement Number"
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/df_dfcode"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/df_collectionpoint"
                    android:text="Collection Point"
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/df_collectionpointName"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/df_Status"
                    android:text="Disbursement Status"
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/df_DisbursementStatus"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/df_delivery"
                    android:text="Delivery Date and Time"
                    android:padding="5dip" />
                <TextView
                    android:id="@+id/df_DeliveryDateTime"
                    android:text=""
                    android:gravity="left"
                    android:padding="5dip" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/collectionSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/disbursement_HandOverDetails"
            android:text="Collection SSummary"
            android:textStyle="bold"
            android:gravity="center"/>

        <TableLayout
            android:id="@+id/handOver_dfFormProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/collectionSummary"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="30dp"
            android:gravity="center">

            <TableRow
                android:id="@+id/handover_disbursementFormProduct"
                android:background="@color/colorBlackTransparent"
                android:showDividers="end">

                <TextView
                    android:id="@+id/handOver_productSerialnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="No"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/handOver_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:text="Product"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/handOver_productQuantityRequested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Qty Requested"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/handOver_productQuantityCollected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Qty Collected"
                    android:textSize="15dp" />

            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/SignInLinear"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            app:layout_constraintTop_toBottomOf="@+id/handOver_dfFormProducts">

            <Button
                android:id="@+id/handOver_signForClerk"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg2"
                android:text="Sign In (Clerk)"
                android:textColor="@color/colorWhite"></Button>

            <TextView
                android:id="@+id/handOver_passwordclerk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />

            <Button
                android:id="@+id/handOver_signForDepRep"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg2"
                android:text="Sign In (DEP REP)"
                android:textColor="@color/colorWhite"></Button>

            <TextView
                android:id="@+id/handOver_passwordDepRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />


        </LinearLayout>

        <Button
            android:id="@+id/handOver_Deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:text="DELIVERED"
            android:textColor="@color/colorWhite"></Button>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>