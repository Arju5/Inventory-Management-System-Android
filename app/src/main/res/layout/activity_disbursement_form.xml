<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.disbursement.DisbursementFormActivity">

    <TextView
        android:id="@+id/createDisbursementFormheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE DISBURSEMENT"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp" />

    <ListView
        android:id="@+id/createDisbursementForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#e5e5ff"
        android:dividerHeight="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/createDisbursementFormheader" />

    <EditText
        android:id="@+id/createDisbursementForm_Comments"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Comments(if any)"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryText"
        android:textSize="15dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/createDisbursementForm"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createDisbursementForm_Submit"
        android:text="Submit"
        android:background="@drawable/badgegreen"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/createDisbursementForm_Comments"
        />

</androidx.constraintlayout.widget.ConstraintLayout>